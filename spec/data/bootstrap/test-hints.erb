<%# Generate Ohai Hints -%>
<% unless @seth_config[:knife][:hints].nil? || @chef_config[:knife][:hints].empty? -%>
mkdir -p /etc/seth/ohai/hints
<% end -%>

<% @seth_config[:knife][:hints].each do |name, hash| -%>
(
cat <<'EOP'
<%= hash.to_json %>
EOP
) > /etc/seth/ohai/hints/<%= name %>.json
<% end -%>
